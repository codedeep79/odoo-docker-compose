# .editorconfig
root = true

# Global rules
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # tuân theo Black formatter
quote_type = single
# đảm bảo tương thích flake8, black, pylint-odoo

# XML, HTML, QWeb templates
[*.{xml,html}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript / JSON / YAML
[*.{js,json,yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# SCSS / CSS
[*.{scss,css}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown / ReStructuredText
[*.{md,rst}]
trim_trailing_whitespace = false
insert_final_newline = true

# CSV data files
[*.csv]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

# Makefile (phải dùng tab)
[Makefile]
indent_style = tab

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4
